<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <div class="error">
          <h6><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h6>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="row">
        <%= form_with model: @book, local:true do |f| %>
          <h5>Title</h5>
          <%= f.text_field :title, class: "col-xs-12" %>
          <h5>Opinion</h5>
          <%= f.text_area :body, class: "col-xs-12" %>
          <%= f.submit 'Update Book', method: :patch, class: "btn btn-primary col-xs-12" %>
        <% end %>
      </div>
      <p>
        <%= link_to "Show", book_path(@book) %> |
        <%= link_to "Back", books_path %>
      </p>
  </div>
</div>