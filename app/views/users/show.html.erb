<%= flash[:notice] %>

<div class="row">
  <div class="col-xs-3">
    <h1>User info</h1>
      <p><%= attachment_image_tag @user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size: "100x100" %></p>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      
      <div class="row">
        <% if @user == current_user %>
          <%= link_to edit_user_path(@user) do %>
            <button class="btn btn-default col-xs-12">
              <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            </button>
          <% end %>
        <% else %>
          <%= link_to user_path(current_user) do %>
            <button class="btn btn-default col-xs-12">
              <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            </button>
          <% end %>
        <% end %>
      </div>
    
    <div class="row"> 
      <h1>New book</h1>
      <%= form_with model: @book, local:true do |f| %>
        <h5>Title</h5>
        <%= f.text_field :title, class:'col-xs-12' %>
        <h5>Opinion</h5>
        <%= f.text_area :body, class:'col-xs-12' %>
        <p><%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %></p>
      <% end %>
    </div> 
  </div>
  
  <div class="col-xs-9">
    <h1>Books</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag @user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size: "50x50" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  
</div>


