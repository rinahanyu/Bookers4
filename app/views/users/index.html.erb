<%= flash[:notice] %>
<div class="row">
  
  <div class="col-xs-4">
    <h1>User info</h1>
      <p><%= attachment_image_tag current_user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size: "100x100" %></p>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
        </tbody>
      </table>
      
      <div class="row">
        <%= link_to edit_user_path(current_user) do %>
          <button class="btn btn-default col-xs-12">
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
          </button>
        <% end %>
      </div>
      
    <h1>New book</h1>
  </div>
  
  <div class="col-xs-8">
    <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  
</div>
